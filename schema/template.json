{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "userInputSchema": {
      "$id": "#userInputSchema",
      "type": "object",
      "allOf": [
        {
          "$ref": "http://json-schema.org/draft-07/schema#"
        },
        {
          "description": "Extension to the JSON for rendering a user interface",
          "type": "object"
        }
      ]
    }
  },
  "description": "Payload Object for templated configuration system",
  "type": "object",
  "properties": {
    "payload": {
      "description": "Any engine appropriate payload.  Can be a string or an object",
      "oneOf": [
        {
          "type": "string",
          "description": "A string payload"
        },
        {
          "type": "object",
          "description": "An object based payload",
          "required": [
            "$schema"
          ]
        }
      ]
    },
    "tags": {
      "type": "array",
      "description": "usage tags to associate with this template and associated template contexts",
      "items": {
        "type": "string"
      }
    },
    "user_input": {
      "$ref": "#/definitions/userInputSchema"
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "type": "string",
            "description": "Target object this expression should run against",
            "$comment": "This might need to be a dictionary and may also apply to more than one target?"
          },
          "expression": {
            "type": "string",
            "format": "jsonpath"
          },
          "invalid_message": {
            "type": "string"
          }
        }
      }
    },
    "engines": {
      "type": "array",
      "description": "Simulation engines that this template is valid for",
      "items": {
        "type": "string",
        "description": "A valid engine identifier"
      }
    }
  },
  "required": [
    "payload",
    "engines"
  ]
}
